<Window x:Class="ProyectoFinalAplicada.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalAplicada"
        mc:Ignorable="d"
         Title="LogIn" Height="320" Width="300"  WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" FontFamily="Times New Roman" HorizontalAlignment="Left" VerticalAlignment="Center" FlowDirection="LeftToRight" >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">


            <Image  Source="/Resources/Copia de  Logo.jpg" Margin="70,0,70,0" />
            <!--Nombre de usuario-->
            <Label Content="Nombre de usuario: " FontSize="15"/>
            <TextBox Name="NombreDeUsuarioTextBox" Height="20" Width="150"  HorizontalAlignment="Left" Margin="5,0"/>

            <!--Contraseña-->
            <Label Content="Contraseña: " FontSize="15"/>
            <PasswordBox PasswordChar="•"  Name="ContraseñaTextBox" Height="20" Width="150"  HorizontalAlignment="Left" Margin="5,0"/>
            <Button Name="IngresarButton" Content="Iniciar sesion" FontSize="25" Height="35" Width="265" Margin="5,40,5,0" FontWeight="Bold" Click="IngresarButton_Click" >
            </Button>


            </StackPanel>



    </Grid>
</Window>
